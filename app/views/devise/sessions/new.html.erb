
<div class="page-header">
  <h2 class="text-xs-center">Log in</h2>
</div>
<hr>
<div class="m-x-auto" style="width:400px">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary', style: 'margin: 3px;'  %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-info', style: 'margin: 3px;'  %>
    </div>
  <% end %>

  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>
